node('jenkins-slave') {

    // tag = commit id
    tag = sh(returnStdout: true, script: "git log -n 1 --pretty=format:'%h'").trim()

    stage('Build') {
        sh (script: """
        echo "Building..."
        git clone https://github.com/vking34/devops-references.git
        cd ./devops-references/ci-cd/sample-app/
        
        docker build . -t vking34/sample-app:${tag}
        
        """)
        
    }
    
     stage('Test') {
        sh(script: """
        echo "Done!"
        """)
    }
}